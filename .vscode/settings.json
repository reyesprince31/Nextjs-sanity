{
  "files.autoSave": "off",
  "files.autoSaveDelay": 1000,
  "editor.formatOnSave": true,
  "html.format.enable": true,
  "html.format.indentHandlebars": true,
  "html.format.maxPreserveNewLines": 0,
  "[handlebars]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "files.associations": {
    "*.hbs": "handlebars"
  }
}
